<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BackgroundCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/shape_default_card_view</item>
        <item name="cardCornerRadius">40dp</item>
    </style>

    <style name="DefaultCardView">
        <item name="android:layout_width">360dp</item>
        <item name="android:layout_height">190dp</item>
        <item name="cardCornerRadius">40dp</item>
    </style>

    <style name="DefaultCardTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DefaultCardNumberEditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">22dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">4</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DefaultCardResult">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">62dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="DefaultCardButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">80dp</item>
    </style>

</resources>