<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_gradient_background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/tittle"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:textStyle="bold"
        app:fontFamily="cursive"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/border_card_numbers"
        android:layout_width="370dp"
        android:layout_height="200dp"
        android:layout_marginBottom="160dp"
        app:cardBackgroundColor="@color/gray"
        app:cardCornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.388"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_numbers"
        android:layout_width="360dp"
        android:layout_height="190dp"
        android:layout_marginBottom="160dp"
        app:cardBackgroundColor="@color/cardsColor"
        app:cardCornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.388">

        <TextView
            android:id="@+id/text_cardNumbers_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="30dp"
            android:text="@string/text_cardNumbers_tittle"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/input_cardNumbers_minimum"
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="22dp"
            android:backgroundTint="@color/white"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/input_cardNumbers_minimum"
            android:inputType="number"
            android:maxLength="4"
            android:textColor="@color/white"
            android:textColorHint="@color/gray" />

        <TextView
            android:id="@+id/text_cardNumbers_tittle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="30dp"
            android:text="@string/text_cardNumbers_tittle2"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/input_cardNumbers_maximum"
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="22dp"
            android:backgroundTint="@color/white"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/input_cardNumbers_maximum"
            android:inputType="number"
            android:maxLength="4"
            android:textColor="@color/white"
            android:textColorHint="@color/gray" />

        <Button
            android:id="@+id/button_cardNumbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"
            android:backgroundTint="@color/green"
            android:text="@string/button_cardNumbers"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:cornerRadius="80dp" />

        <TextView
            android:id="@+id/txt_cardNumbers_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="62dp"
            android:textColor="@color/white"
            android:textSize="28sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/border_card_names"
        android:layout_width="370dp"
        android:layout_height="230dp"
        app:cardBackgroundColor="@color/gray"
        app:cardCornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_numbers"
        app:layout_constraintVertical_bias="0.258"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_names"
        android:layout_width="360dp"
        android:layout_height="220dp"
        app:cardBackgroundColor="@color/cardsColor"
        app:cardCornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_numbers"
        app:layout_constraintVertical_bias="0.258">

        <EditText
            android:id="@+id/input_cardNames_name"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/input_cardNames_name"
            android:inputType="textPersonName"
            android:textColor="@color/white"
            android:textColorHint="@color/gray" />

        <Button
            android:id="@+id/button_cardNames_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="60dp"
            android:backgroundTint="@color/green"
            android:text="@string/button_cardNames_add"
            android:textColor="@color/black"
            app:cornerRadius="80dp" />

        <Button
            android:id="@+id/button_cardNames_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="142dp"
            android:layout_marginTop="60dp"
            android:backgroundTint="@color/green"
            android:text="@string/button_cardNames_sort"
            android:textColor="@color/black"
            app:cornerRadius="80dp" />

        <Button
            android:id="@+id/button_cardNames_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="255dp"
            android:layout_marginTop="60dp"
            android:backgroundTint="@color/red"
            android:text="@string/button_cardNames_clear"
            android:textColor="@color/black"
            app:cornerRadius="80dp" />

        <TextView
            android:id="@+id/txt_cardNames_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:textColor="@color/white"
            android:textSize="28sp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_author"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>